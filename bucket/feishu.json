            "64bit": {
                "url": "https://sf3-cn.feishucdn.com/obj/ee-appcenter/$matchXid/Feishu-win32_x64-$version-signed.exe#/dl.exe",
                "hash": {
                    "url": "https://www.feishu.cn/api/downloads",
                    "jp": "$.versions.Windows_x64.hash"
