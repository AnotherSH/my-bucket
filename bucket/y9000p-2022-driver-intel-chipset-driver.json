{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/refs/heads/master/schema.json",
    "version": "10.1.36.7",
    "description": "IntelChipset Driver英特尔主板芯片组驱动",
    "homepage": "https://newsupport.lenovo.com.cn/",
    "license": "Freeware",
    "url": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/refs/heads/master/.gitattributes#/dl.txt",
    "hash": "75f7fc4b73a991060cb6b81bb4bbe5a94673f801b523ba2c100de75f3678b142",
    "pre_install": [
        "Remove-Item $dir/dl.txt",
        "$jsonUrl = \"https://newsupport.lenovo.com.cn/api/drive/drive_listnew?searchKey=15043\"",
        "$json = Invoke-WebRequest -Uri $jsonUrl | ConvertFrom-Json",
        "$driverJson = (($json.data.partList | Where-Object { $_.PartName -eq '主板' }).drivelist | Where-Object { $_.DriverName -eq 'Intel Chipset Driver 英特尔主板芯片组驱动' })",
        "$downloadUrl = $driverJson.FilePath",
        "Invoke-WebRequest -Uri $downloadUrl -OutFile \"$dir/dl.exe\""
    ],
    "installer": {
        "script": [
            "$process = Start-Process \"$dir\\dl.exe\" -ArgumentList \"/sp- /silent /norestart\" -PassThru",
            "$ppid = $process.Id",
            "Write-Host '已启动安装软件： '$process.Name' , 等待其安装完毕...'",
            "Wait-Process -Id $ppid",
            "Write-Host '安装软件： '$process.Name' 已关闭 ， 删除安装软件...'",
            "Remove-Item $dir/dl.exe"
        ],
        "keep": false
    },
    "innosetup": true,
    "checkver": {
        "url": "https://newsupport.lenovo.com.cn/api/drive/drive_listnew?searchKey=15043",
        "jsonpath": "$.data.partList[?(@.PartName=='主板')].drivelist[?(@.DriverName=='Intel Chipset Driver 英特尔主板芯片组驱动')].Version"
    },
    "autoupdate": {
        "url": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/refs/heads/master/.gitattributes"
    }
}
