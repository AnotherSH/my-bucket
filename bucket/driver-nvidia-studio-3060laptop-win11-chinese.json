{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/refs/heads/master/schema.json",
    "version": "581.57",
    "description": "NVIDIA Studio 驱动程序",
    "homepage": "https://www.nvidia.cn/",
    "license": "Freeware",
    "url": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/refs/heads/master/.gitattributes",
    "hash": "75f7fc4b73a991060cb6b81bb4bbe5a94673f801b523ba2c100de75f3678b142",
    "installer": {
        "script": [
            "$jsonUrl = \"https://gfwsl.geforce.cn/services_toolkit/services/com/nvidia/services/AjaxDriverService.php?func=DriverManualLookup&psid=123&pfid=940&osID=135&languageCode=2052&beta=0&isWHQL=0&dltype=-1&dch=1&upCRD=1&qnf=0&sort1=1&numberOfResults=10\"",
            "$json = Invoke-WebRequest -Uri $jsonUrl | ConvertFrom-Json",
            "$downloadUrl = $json.IDS[0].downloadInfo.DownloadURL",
            "Invoke-WebRequest -Uri $downloadUrl `",
            "-Header @{",
            "\"accept\" = \"text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,image/apng,*/*;q=0.8,application/signed-exchange;v=b3;q=0.7\"",
            "\"accept-encoding\"           = \"gzip, deflate, br, zstd\"",
            "\"accept-language\"           = \"zh-CN,zh;q=0.9,en-US;q=0.8,en;q=0.7\"",
            "\"cache-control\"             = \"no-cache\"",
            "\"pragma\"                    = \"no-cache\"",
            "\"priority\"                  = \"u=0, i\"",
            "\"referer\"                   = \"https://www.nvidia.cn/\"",
            "\"sec-ch-ua\"                 = '\"Chromium\";v=\"135\", \"Not-A.Brand\";v=\"8\"'",
            "\"sec-ch-ua-mobile\"          = \"?0\"",
            "\"sec-ch-ua-platform\"        = \"Windows\"",
            "\"sec-fetch-dest\"            = \"document\"",
            "\"sec-fetch-mode\"            = \"navigate\"",
            "\"sec-fetch-site\"            = \"cross-site\"",
            "\"sec-fetch-user\"            = \"?1\"",
            "\"upgrade-insecure-requests\" = \"1\"",
            "\"user-agent\"                = \"Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/135.0.0.0 Safari/537.36\"",
            "}` -Method Get -OutFile $dir/dl.exe",
            "$process = Start-Process \"$dir/dl.exe\" -PassThru",
            "$ppid = $process.Id",
            "Write-Host '已启动安装软件： '$process.Name' , 等待其安装完毕...'",
            "Wait-Process -Id $ppid",
            "Write-Host '安装软件： '$process.Name' 已关闭 ， 删除安装软件...'",
            "Remove-Item \"$dir/dl.exe\""
        ],
        "keep": false
    },
    "checkver": {
        "url": "https://gfwsl.geforce.cn/services_toolkit/services/com/nvidia/services/AjaxDriverService.php?func=DriverManualLookup&psid=123&pfid=940&osID=135&languageCode=2052&beta=0&isWHQL=0&dltype=-1&dch=1&upCRD=1&qnf=0&sort1=1&numberOfResults=10",
        "jsonpath": "$.IDS[0].downloadInfo.Version"
    },
    "autoupdate": {
        "url": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/refs/heads/master/.gitattributes"
    }
}
